{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

  <img src="/assets/bg.png" alt="" />
    {{#is "home"}}

      <div class="section">
        <div class="columns is-centered">
          <div class="column is-7">
            <article class="tile is-child notification is-light">
              <p class="subtitle is-size-4 has-text-centered">The pulse of food <span style="color:#9849A5">m</span>anufacturing, <span style="color:#9849A5">r</span>etail, and <span style="color:#9849A5">s</span>afety</p>
              <div class="columns is-centered">
                <div class="column is-10">
                  <p class="has-text-centered">One monthly newsletter bursting with analysis and insights - so food professionals can stay ahead of the curve</p>
                  <br>
                  <div class="columns is-centered">
                    <div class="column is-6">
                      <form action="https://quikpath.us4.list-manage.com/subscribe/post?u=82e4f4d92d8a4867d8d765536&amp;id=5f129832af" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                        <div class="field has-addons">
                          <div class="control">
                            <input class="input is-small" placeholder="Email Address" type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" >
                          </div>
                          <div class="control">
                            <button class="button subscribe-button is-small" type="submit">Subscribe</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </article>
          </div>
        </div>
      </div>
    {{/is}}

    <h1 class="has-text-centered is-size-4">
      Recent posts
    </h1>

    <div class="section">
      {{#foreach posts}}

        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
        {{> "post-card"}}

      {{/foreach}}
    </div>

