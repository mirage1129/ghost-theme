{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<img class="bgpic" src="/mrsfood/assets/images/bgpic.png" alt="" />

<div class="site-wrapper">
    {{#is "home"}}
        {{!-- {{#if @site.description}}
        <header class="page-head">
            <h2 class="page-head-title">{{@site.description}}</h2>
        </header>
        {{/if}} --}}
    
            <div class="columns is-centered">
            <div class="column">
                <p id="subbutton" class="is-size-2 has-text-centered">The pulse of food <span style="color:#9849A5">m</span>anufacturing, <span style="color:#9849A5">r</span>etail, and <span style="color:#9849A5">s</span>afety</p>
                <div class="columns is-centered">
                    <div class="column is-6">
                        <br>
                    <p class="is-size-5 has-text-centered">One monthly newsletter bursting with analysis and insights to keep food professionals ahead of the curve</p>
                    <br>
                    <div class="columns is-centered">
                        <div class="column is-6">
                        <form action="https://quikpath.us4.list-manage.com/subscribe/post?u=82e4f4d92d8a4867d8d765536&amp;id=5f129832af" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                            <div class="field has-addons">
                            <div class="control">
                                <input class="input" placeholder="Email Address" type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" >
                            </div>
                            <div class="control">
                                <button class="button header-button" type="submit">Subscribe</button>
                            </div>
                            </div>
                        </form>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
            </div>




    {{/is}}

    <div class="post-feed">
        {{#foreach posts}}

            {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            {{> "post-card"}}

        {{/foreach}}
    </div>

</div>